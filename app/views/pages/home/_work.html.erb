  <div id="work-container">
    <div id="work-menu-toggle" class="focus">
      <i></i>
      <i></i>
      <i></i>
    </div>
    
    <div id="work-menu" class="opened">
      <div id="work-menu-petal-container">
        <div class="work-menu-petal">
          <div><%= render "icons/beard" %></div>
        </div>
        <div class="work-menu-petal">
          <div><%= render "icons/lisp" %></div>
        </div>
        <div class="work-menu-petal">
